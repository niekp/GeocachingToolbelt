@model Tool
<div class="col-lg-3 col-md-6 col-sm-12 col-xs-12 d-flex align-items-stretch">
    <div class="card mb-3 w-100">
        <img src="@Model.Image" class="card-img-top" alt="@Model.Title">
        <div class="card-body">
            <h5 class="card-title">@Model.Title</h5>
            <p class="card-text">
                @Model.Description
            </p>

            @Html.ActionLink("", Model.Action, Model.Controller, null, new { @class = "btn btn-link stretched-link" })
        </div>
    </div>
</div>