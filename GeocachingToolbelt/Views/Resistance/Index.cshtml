@{
    ViewBag.Title = "Weerstand kleurcodes";
    ViewBag.Description = "Bereken de weerstand codes van 1 of meerdere kleuren tegelijkertijd.";
}
<h1>Weerstand kleurcodes</h1>
<div class="mb-3">
    Bereken de weerstand codes van 1 of meerdere kleuren tegelijkertijd.
</div>

<div data-id="color-picker" class="colorpicker"></div>
<div class="clearfix"></div>

<div class="form-group">
    <label for="coords">Kleuren</label>
    <textarea class="form-control" name="colors" data-id="colors" rows="3" aria-describedby="colorsHelp"></textarea>
    <small id="colorsHelp" class="form-text text-muted">1 kleur per regel</small>
</div>

<div data-id="result-container" class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th style="width:300px;">Kleur</th>
                <th>Weerstand code <img src="~/images/copy.png" alt="copy" title="Kopieer" data-trigger="copy" /></th>
                <th>Kleur</th>
            </tr>
        </thead>
        <tbody data-id="result">
            
        </tbody>
    </table>
</div>

@section Scripts {
    <script src="~/js/copy.js" asp-append-version="true"></script>   
    <script src="~/js/resistance.js" asp-append-version="true"></script>   
}
